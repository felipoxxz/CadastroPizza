@{
}
@model List<tbPizzaViewModel>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Pizza</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="~/js/pizza.js"></script>
</head>
<body>
    <h2>Listagem das Pizzas</h2>
    <a href="Pizza/Create" title="Novo Registro">
        <i class="fas fa-plus"></i> <!-- Ícone de criação -->
    </a>
    <a href="Pizza/ConsultaAvancada">Consulta Avançada</a>
    <br />
    <table class="table table-responsive">
        <tr>
            <th>Ações</th>
            <th>Id da Pizza</th>
            <th>Descrição</th>
        </tr>
        @if (Model is not null)
        {
            @foreach (var pizza in Model)
            {
                <tr>
                    <td>
                        <a href="Pizza/edit?id=@pizza.id" title="Editar">
                            <i class="fas fa-edit"></i> <!-- Ícone de edição -->
                        </a>
                        &nbsp;&nbsp;
                        <a href="javascript:apagarPizza(@pizza.id)" title="Apagar">
                            <i class="fas fa-trash-alt"></i> <!-- Ícone de exclusão -->
                        </a>
                        <a href="IngredientesPizza/Create"></a>
                    </td>
                    <td>@pizza.id</td>
                    <td>@pizza.descricao</td>
                </tr>
            }
        }
    </table>
</body>
</html>